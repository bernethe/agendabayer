---
import BayerLogo from '../svg/bayer.astro';
import logoDate from '../assets/reimage-w-dates.webp';
import '@fontsource-variable/montserrat';
let {title} = Astro.props;
---
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-white">
		<header class="bg-indextop bg-bottom bg-cover pb-24">
			<div class="container mx-auto">
				<div class="relative w-full sm:w-2/3 mx-auto">
					<div class="w-2/3 md:w-1/2 py-24">
						<img src={logoDate.src} alt="Agenda Bayer" class="" />
					</div>
					<div class="w-16 absolute top-4 right-4">
						<BayerLogo isFillWhite />
					</div>
				</div>
			</div>
		</header>
		<div class="container mx-auto p-4">
			<slot />
		</div>
	</body>
</html>