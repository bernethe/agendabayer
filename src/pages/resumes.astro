---
import ResumesLayout from '../layouts/ResumesLayout.astro';
import resumes from '../json/resumes.json';
---
<ResumesLayout title='Agenda Bayer'>
	{
		resumes.map( r => <div class="w-full md:w-1/2 mx-auto my-12 md:flex">
			<div class="w-20">
				<div class="relative h-20">
					<img
						src={ `/img/${r.id}.webp` }
						alt={r.name}
						class="aspect-square rounded-full absolute top-0 left-0"
					/>
					<img
						src={ `/img/flag-${r.country}.webp` }
						alt={r.country}
						class="aspect-square rounded-full w-1/3 absolute -bottom-2 right-0"
					/>
				</div>
			</div>
			<div class="md:pl-4 flex-1">
				<p class="mb-4 uppercase"><strong>{r.name}</strong></p>
				<ul>
					{
						r.cvlist.map( c => <li>{c}</li> )
					}
				</ul>
			</div>
		</div> )
	}
</ResumesLayout>