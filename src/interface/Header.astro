---
import EventLogo from '../assets/event-logo.webp';
import Event2Logo from '../assets/event-logo-2.webp';
import BayerLogo from '../svg/bayer.astro';

let {logo=1} = Astro.props;
---
<div class="md:flex">
    <div class="md:w-1/6 md:order-2">
        <div class="w-24 mx-auto">
            <BayerLogo />
        </div>
    </div>
    <div class="md:w-5/6 px-4 pt-12 md:order-1">
        <img src={ logo === 1 ? EventLogo.src : Event2Logo.src  } alt="Agenda Bayer" />
    </div>
</div>