---
let {hours, items} = Astro.props;
---
<div class="my-4 mx-4 md:mx-0 py-2 px-4 md:px-8 md:flex md:flex-wrap text-blue">
	<div class="md:w-1/6 md:border-b border-blue md:py-4">
		{hours}
	</div>
	<div class="md:w-5/6 md:flex md:flex-wrap">
	{
		items.map( it => <>
			<div class="md:w-4/5 md:border-b border-blue md:py-4">
				{it.title}
			</div>
			<div class="md:w-1/5 md:border-b border-blue pb-2 md:py-4">
				{it.location}
			</div>
		</>)
	}
	</div>
</div>